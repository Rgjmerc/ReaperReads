<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ReaperReads</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    {% include "components/navbar.html.jinja" %}
    <main class="container form-signin w-100 m-auto text-center">
        <form action="/signup" method="post">
            <img class="mb-4" src="" alt="add logo here" width="72" height="57">
            <h2 class="text-decoration-underline mb-3 fw-normal">Please sign in</h2>
            <br>
            <div class="row justify-content-center  ">
                {%for message in get_flashed_messages()%}
                <div class="alert alert-danger col-5" role="alert">
                    {{message}}
                </div>
                {%endfor%}
            </div>
            <div class="row">
                <div class="col-6 mx-auto">
                    <label class="fs-4" for="floatingPassword">Username</label>
                    <input type="text" name="username" class="form-control form-control-lg" id="floatingPassword" placeholder="Username" required value="{{request.form.get('username', '')}}">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-6 mx-auto">
                    <label class="fs-4" for="floatingPassword">Password</label>
                    <input type="password" name="pass" class="form-control form-control-lg" placeholder="Password" required>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-6 mx-auto">
                    <label class="fs-4" for="floatingPassword">Confirm Password</label>
                    <input type="password" name="confirmpass" class="form-control form-control-lg" placeholder="Confirm Password" required>
                </div>
            </div>
            <br>           
            <div class="row">
                <div class="col-6 mx-auto">
                    <label class="fs-4" for="floatingInput">Email address</label>
                    <input type="email" name="email" class="form-control form-control-lg" placeholder="name@example.com" required value="{{request.form.get('email', '')}}">                   
                </div>
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="col-3">
                    <label class="fs-4" for="floatingPassword">First Name</label>
                    <input type="text" name="fname" class="form-control form-control-lg" id="floatingPassword" placeholder="First Name" required value="{{request.form.get('fname', '')}}">
                </div>
                <div class="col-3">
                    <label class="fs-4" for="floatingPassword">Last Name</label>
                    <input type="text" name="lname" class="form-control form-control-lg" id="floatingPassword" placeholder="Last Name" required value="{{request.form.get('lname', '')}}">
                </div>
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="col-6">
                    <label class="fs-4" for="floatingInput">Full Address</label>
                    <input type="text" name="address" class="form-control form-control-lg" placeholder="123 Street" required value="{{request.form.get('address', '')}}">                   
                </div>
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="form-check text-start w-auto">
                    <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">Remember me</label>
                </div>
            </div>
            <br>
            <button class="btn btn-primary w-50 py-2" type="submit">Sign Up</button>
            <p class="mt-5 mb-3 text-body-secondary">&copy; 2017â€“2024</p>
        </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>