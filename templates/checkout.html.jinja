<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ReaperReads</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    {% include "components/navbar.html.jinja" %}

    <h1 class="text-center text-decoration-underline py-3">Checkout</h1>
    <h3 class="text-center">Total: ${{ "%.2f" | format(overall_total) }}</h3>
    <table class="table container">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total</th>
    </tr>
    </thead>
    <tbody>

    {%for item in products%}
    <tr>
        <td><img src="{{item['image']}}" class="rounded" alt="{{item['description']}}" height="80"> {{item["name"]}}</td>
        <td>{{item['quantity']}}</td>
        <td>{{ "%.2f" | format(item["price"]*item["quantity"])}}</td>
    </tr>
    {%endfor%}
    </tbody>
    </table>
    <br>
    <div class="row justify-content-end">
    <p class="fs-6 col-4">Item Total: ${{ "%.2f" | format(total) }}</p>
    </div>
    <div class="row justify-content-end">
    <p class="fs-6 col-4">Tax: ${{ "%.2f" | format(tax_total) }}</p>
    </div>
    <div class="row justify-content-end">
    <hr class="ms-5 col-2">
    <p class="fs-6 col-4">Overall Total: ${{ "%.2f" | format(overall_total) }}</p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>