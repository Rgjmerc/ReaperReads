<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ReaperReads</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/static/styles.css" rel="stylesheet">
</head>

<body>
    {% include "components/navbar.html.jinja" %}

    <h1 class="text-center text-decoration-underline py-3">Checkout</h1>
    <div class="container">
        <div class="row">
            <div class="col-7">
                <table class="table container">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody>

                        {%for item in products%}
                        <tr class="col">
                            <td><img src="{{item['image']}}" class="rounded" alt="{{item['description']}}" height="80">
                                {{item["name"]}}</td>
                            <td>{{item['quantity']}}</td>
                            <td>{{ "%.2f" | format(item["price"]*item["quantity"])}}</td>
                        </tr>
                        {%endfor%}
                    </tbody>
                </table>
            </div>
            <div class="col-3">

                <div class="row">
                    <p class="ms-5 fs-4 custom-text"><span class="fw-semibold text-decoration-underline custom-text">Item Total:</span> ${{ "%.2f" | format(total) }}</p>
                </div>
                <div class="row">
                    <p class="ms-5 fs-4 custom-text"><span class="fw-semibold text-decoration-underline custom-text">Tax:</span> ${{ "%.2f" | format(tax_total) }}</p>
                </div>
                <div class="row">
                    <hr class="col ms-5 pe-3 text-dark">
                </div>
                <div class="row">
                    <p class="ms-5 fs-4 custom-text">Overall Total:</span> ${{ "%.2f" | format(overall_total) }}</p>
                </div>
                <br>
                <form class="ms-5" action="/sale">
                    <button type="submit" class="btn btn-success btn-lg">Complete Transaction</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>